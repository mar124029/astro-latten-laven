---
// Importa el array de datos

import RowMenu from "./RowMenu.astro";
import imagesdata from "../data/imagesdata.json";
import menudata from "../data/menudata.json";
---

<section
  id="menu"
  class="w-full pt-[50px] mb-20 px-5 sm:px-5 md:px-10 lg:px-[60px]"
>
  <h2
    class="text-[42px] font-poppins-semibold leading-custom-tight-1.2 font-bold"
  >
    Our Menu
  </h2>
  <RowMenu
    menudata={menudata.categoría_1}
    0
    namecategory="Coffee"
    isReverse={false}
    img={imagesdata[0].img}
    label={imagesdata[0].label}
    alt="Espresso with steamed milk and a light layer of foam. Flavors: Vanilla, Caramel, Hazelnut, Mocha."
  />
  <RowMenu
    menudata={menudata.categoría_2}
    namecategory="Specialty Lattes"
    isReverse={true}
    img={imagesdata[1].img}
    label={imagesdata[1].label}
    alt="Spiced chai tea blended with steamed milk."
  />
  <RowMenu
    menudata={menudata.categoría_3}
    namecategory="Tea & Other Bevereges"
    isReverse={false}
    img={imagesdata[2].img}
    label={imagesdata[2].label}
    alt="Rich and creamy hot chocolate, topped with wipped cream."
  />
  <RowMenu
    menudata={menudata.categoría_4}
    namecategory="Pastries & Baked Goods"
    isReverse={true}
    img={imagesdata[3].img}
    label={imagesdata[3].label}
    alt="Buttery and flaky, baked fresh daily."
  />
</section>
