  <!-- Línea responsiva con márgenes -->
  <div class="flex justify-center items-center">
    <!-- Horizontal en pantallas pequeñas y vertical en pantallas medianas y más grandes -->
    <hr class="w-full h-1 bg-black md:w-1 md:h-full" />
  </div>

  <!-- Columna derecha con iframe ajustado -->
  <div class="relative" style="max-width:100%; overflow:hidden; color:red; width:100%; height:100%;">
    <div id="google-maps-canvas" class="h-64 sm:h-80 md:h-full w-full max-w-full">
      <iframe
        style="height:100%;width:100%;border:0;"
        frameborder="0"
        src="https://www.google.com/maps/embed/v1/place?q=52.37588,+4.891295&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
        allowfullscreen
        loading="lazy"
      ></iframe>
    </div>
    <style>
      #google-maps-canvas img {
        max-width: none !important;
        background: none !important;
        font-size: inherit;
        font-weight: inherit;
      }

      @media (max-width: 640px) {
        #google-maps-canvas {
          height: 300px; /* Ajusta la altura para pantallas pequeñas */
        }
      }
    </style>
  </div>
